        android:text="Incident"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/IncidentPopup_tvUserInitials"/>
    <TextView
        android:id="@+id/IncidentPopup_tvFlagLevel"
        android:text="Flag Level"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/IncidentPopup_tvIncidentName"/>
    <TextView
        android:id="@+id/IncidentPopup_tvAdditionalInfo"
        android:text="Additional Information"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/IncidentPopup_tvFlagLevel"/>
