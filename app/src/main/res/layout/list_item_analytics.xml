<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_item_borderline">
    <TextView
        android:id="@+id/AnalyticsListItem_tvCustomerInitials"
        android:text="CustInitials"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/AnalyticsListItem_tvDate"
        android:text="Date"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/AnalyticsListItem_tvCustomerInitials"
        />

</androidx.constraintlayout.widget.ConstraintLayout>